<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<%-include('./partials/head')  %>
</head>
<body>
	<!-- Header -->
	<%-include('./partials/headerLogueado')  %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= user.foto %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= user.nombre %> 
						<a href="profile-edit.html">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= user.mail %> </li>
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i=0; i<10; i++){%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%=productos[i].id%>">
							<figure class="product-box_image">
								<img src=" <%= productos[i].imagen %>" alt="cosmeticos">
							</figure>
							<article class="product-box_data">
								<h2> <%= productos[i].nombre %> </h2>
								<p><%= productos[i].descripcion %> </p>
								<p> comentarios: <%= productos[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
				<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%-include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>