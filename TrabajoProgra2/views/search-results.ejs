<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<%-include('./partials/head')  %>
</head>

<body>
	<!-- Header -->
	<%-include('./partials/header')  %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i=0; i<10; i++){%>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/product/<%=productos[i].id%>">
                            <figure class="product-box_image">
                                <img src=" <%= productos[i].imagen %>" alt="cosmeticos">
                            </figure>
                            <article class="product-box_data">
                                <h2> <%= productos[i].nombre %> </h2>
                                <p><%= productos[i].descripcion %> </p>
                                <p> comentarios: <%= productos[i].comentarios.length %></p>
                            </article>
                        </a>
                    </section>
                </div>
                <% } %>


	<!-- footer -->
	<%-include('./partials/footer')  %>
	<!-- /footer -->
</body>

</html>