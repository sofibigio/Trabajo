<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="./css/app.css">
</head>

<body>
	<!-- Header -->
	<%-include('./partials/header')  %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%=producto.id%>">
						<figure class="product-box_image">
							<img src=" <%= producto.imagen %>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2> <%= producto.nombre %> </h2>
							<p><%= producto.descripcion %> </p>
							<p> comentarios: <%= producto.comentarios.length %></p>
						</article>
					</a>
				</section>
			</div>


	<!-- footer -->
	<%-include('./partials/footer')  %>
	<!-- /footer -->
</body>

</html>