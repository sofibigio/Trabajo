<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%-include('./partials/head')  %>
<body>
	<!-- Header -->
	<%-include('./partials/header')  %>
	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%=producto.nombre %></h2> 
			<p class="product-detail-description">
				<a href="/product/agregar">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src= "<%= producto.imagen %>"alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= producto.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for (let i = 0; i<comentario.length; i++) { %>
							
						
						<article>
							<img src=<%= comentario[i].imgen %>  alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/users"><%= comentario[i].nombre %></a> </strong>
								<%= comentario[i].texto %>
								<%= comentario[i].imagen %> 
								</p>
								  
							</div>
						</article>
						<%}%>
					

					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%-include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>